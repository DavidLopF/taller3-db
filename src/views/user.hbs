<div class="container is-max-desktop mt-6 animate__animated animate__flipInX" style="max-width: 800px">
    <div class="box">
        <div class="container is-max-desktop mt-6 " style="max-width: 700px;">
            <h1 class="title is-1" style="text-align:center">Registrarse</h1>
            <hr>
        </div>
        <div class="field">
            <label for="" class="label">Nombre</label>
            <div class="control">
                <input type="text" autofocus="true" required="true" placeholder="Nombre" class="input">
            </div>
        </div>
        <div class="field">
            <label for="" class="label">Email</label>
            <div class="control">
                <input type="email" autofocus="true" required="true" placeholder="Email" class="input">
            </div>
        </div>
        <div class="field">
            <label for="" class="label">Telefono</label>
            <div class="control">
                <input type="number" autofocus="true" required="true" placeholder="Telefono" class="input">
            </div>
        </div>

        <div class="field">
            <label for="" class="label">Contraseña</label>
            <div class="control">
                <input type="password" required="true" class="input" placeholder="Contraseña"
                    autocomplete="current-password">
            </div>
        </div>
        <div class="field">
            <label for="" class="label">Confirmar contraseña</label>
            <div class="control">
                <input type="password" required="true" class="input" placeholder="Confirme contraseña"
                    autocomplete="current-password">
            </div>
        </div>
        <div class="field">
            <label for="" class="label">Seleccione ciudad</label>
            <div class="select">
                <select>
                    <option>Bogotá</option>
                    <option>Medellin</option>
                    <option>Cali</option>
                </select>
            </div>
        </div>
        <div class="field">
            <label for="" class="label">Dirección</label>
            <div class="control">
                <input type="text" autofocus="true" required="true" placeholder="Dirección" class="input">
            </div>
        </div>

        <div class="field">
            <label for="" class="label">Recordar mi contraseña</label>
            <input type="checkbox" name="" id="" class="radio">
        </div>
        <div class="container is-half mt-3" style="text-align:center">
            <button class="button is-black">Registrarme</button>
        </div>

    </div>
</div>