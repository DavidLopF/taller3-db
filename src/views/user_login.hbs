<div class="container is-max-desktop mt-6 animate__animated animate__flipInX" style="max-width: 800px">
    <div class="box">
        <div class="container is-max-desktop mt-6 " style="max-width: 700px;">
            <h1 class="title is-1" style="text-align:center">Iniciar sesión</h1>
            <hr>
        </div>
        <div class="field">
            <label for="" class="label">Email</label>
            <div class="control">
                <input type="email" autofocus="true" required="true" placeholder="Email" class="input">
            </div>
        </div>

        <div class="field">
            <label for="" class="label">Contraseña</label>
            <div class="control">
                <input type="password" required="true" class="input" placeholder="Contraseña"
                    autocomplete="current-password">
            </div>
        </div>
        
        <div class="container is-half mt-3" style="text-align:center">
            <button class="button is-black">Registrarme</button>
        </div>
    </div>
</div>